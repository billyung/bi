<?xml version="1.0" encoding="utf-8"?>
<action-sequence> 
  <name>PieChart1.xaction</name>
  <title>Loan Fees by Branch Bar Chart</title>
  <version>1</version>
  <logging-level>TRACE</logging-level>
  <documentation> 
    <author>John Woodlock</author>  
    <description/>  
    <help/>  
    <result-type>none</result-type>  
    <icon/> 
  </documentation>

  <inputs> 
    <officeId type="string"> 
      <sources> 
        <request>officeId</request> 
      </sources>  
      <default-value/> 
    </officeId> 
  </inputs>

  <outputs> 
    <image-tag type="string"/>  
    <!--query_result/-->  
    <!--swresult/--> 
  </outputs>

  <resources/>
  
  <actions> 
    <action-definition> 
      <component-name>SQLLookupRule</component-name>
      <action-type>Relational</action-type>
      <action-inputs> 
        <officeId type="string"/> 
      </action-inputs>
      <action-outputs> 
        <query-result type="result-set" mapping="query_result"/> 
      </action-outputs>
      <component-definition> 
        <jndi><![CDATA[DestinationDB]]></jndi>  
        <live><![CDATA[true]]></live>  
        <query><![CDATA[select d.year_month_abbreviation, 
sum(if(x.account_charge_type_id = 1, x.amount, 0)) as "Periodic and One-time Fees",
sum(if(x.account_charge_type_id != 1, x.amount, 0)) as "Misc. Fees, Charges and Penalties"
from fact_loan_fees_and_charges x
join dim_date d on d.date_key = x.action_date_key
join dim_office o on o.office_id = {officeId}
join dim_office oo on oo.search_id like concat(o.search_id, '%') and oo.office_key = x.branch_key

where d.date_value between date('2010-05-01') and date('2010-10-31')
group by d.year_month_abbreviation 
order by d.date_value]]></query> 
      </component-definition> 
    </action-definition>
  
    <action-definition> 
      <component-name>ChartComponent</component-name>
      <action-type>Bar Chart</action-type>
      <action-inputs> 
        <chart-data type="result-set" mapping="query_result"/> 
      </action-inputs>
      <action-outputs> 
        <image-tag type="string"/> 
      </action-outputs>
      <component-definition> 
        <chart-attributes> 
          <chart-type>BarChart</chart-type>  
          <is-3D>true</is-3D>  
          <title-font> 
            <size>14</size>  
            <is-bold>true</is-bold> 
          </title-font> 
        </chart-attributes>  
        <width><![CDATA[400]]></width>  
        <height><![CDATA[300]]></height>  
        <by-row><![CDATA[false]]></by-row>  
        <title><![CDATA[Loan Fees and Charges]]></title> 
      </component-definition> 
    </action-definition>
 
  </actions> 
</action-sequence>