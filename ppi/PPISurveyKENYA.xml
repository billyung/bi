<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Kenya 01</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>Survey Administration</name>
        <question order="1">
            <title>Date Survey Was Taken</title>
            <nickname>PPI_Kenya_01_survey_date</nickname>
            <type>DATE</type>
        </question>
    </section>
    <section order="2">
        <name>PPI Questions</name>
        <question order="1">
            <title>How many household members are aged 25 or younger?</title>
            <nickname>PPI_Kenya_01_family_0_to_25</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>3 or more</value>
            </choice>
            <choice order="2">
                <value>0, 1, or 2</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <title>How many household members aged 6 to 17 are currently attending school?</title>
            <nickname>PPI_Kenya_01_school_6_to_17</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Not all</value>
            </choice>
            <choice order="2">
                <value>All</value>
            </choice>
            <choice order="3">
                <value>No children aged 6 to 17</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <title>What is the material of the walls of the house?</title>
            <nickname>PPI_Kenya_01_house_walls</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Mud/cow dung; grass/sticks/makuti; or no data</value>
            </choice>
            <choice order="2">
                <value>Other</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <title>What kind of toilet facility does your household use?</title>
            <nickname>PPI_Kenya_01_toilet</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Other</value>
            </choice>
            <choice order="2">
                <value>Flush to sewer; flush to septic tank; pan/bucket; covered pit latrine; or ventilation improved pit latrine</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <title>Does the household own a TV?</title>
            <nickname>PPI_Kenya_01_owns_television</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <title>Does the household own a sofa?</title>
            <nickname>PPI_Kenya_01_owns_sofa</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <title>Does the household own a stove?</title>
            <nickname>PPI_Kenya_01_owns_stove</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <title>Does the household own a radio?</title>
            <nickname>PPI_Kenya_01_owns_radio</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <title>Does the household own a bicycle?</title>
            <nickname>PPI_Kenya_01_owns_bicycle</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <title>How many head of cattle are owned by the household currently?</title>
            <nickname>PPI_Kenya_01_owns_cattle</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None or unknown</value>
            </choice>
            <choice order="2">
                <value>1 or more</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
    </section>
</QuestionGroup>

