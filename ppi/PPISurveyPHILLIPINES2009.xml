<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Phillipines 01</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Phillipines 01</name>
        <question order="1">
            <title>Date Survey Was Taken</title>
            <type>DATE</type>
        </question>
    </section>
    <section order="2">
        <name>PPI Questions</name>
        <question order="1">
            <title>How many people in the family are aged 0 to 14?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Five or more</value>
            </choice>
            <choice order="2">
                <value>Four</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Two</value>
            </choice>
            <choice order="5">
                <value>One</value>
            </choice>
            <choice order="6">
                <value>None</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <title>Do all children in the family of ages 6 to 14 go to school?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <choice order="3">
                <value>No children aged 6 to 14</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <title>What is the education level of the female head/spouse?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Graduate primary or less</value>
            </choice>
            <choice order="2">
                <value>First- to fourth-year secondary</value>
            </choice>
            <choice order="3">
                <value>Graduate secondary</value>
            </choice>
            <choice order="4">
                <value>First-year college or higher, or no female head/spouse</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <title>Do any family members have salaried employment?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <title>What are the house’s outer walls made of?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Light materials (cogon, nipa, or sawali, bamboo, anahaw)</value>
            </choice>
            <choice order="2">
                <value>Strong materials (iron, aluminum, tile, concrete, brick, stone, wood, asbestos)</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <title>What is the house’s roof made of?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Light materials (Salvaged, makeshift, cogon, nipa, or anahaw)</value>
            </choice>
            <choice order="2">
                <value>Strong materials (Galvanized iron, aluminum tile, concrete, brick, stone, or asbestos)</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <title>What kind of toilet facility does the family have?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None, open pit, closed pit, or other</value>
            </choice>
            <choice order="2">
                <value>Water sealed</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <title>Does the family own a refrigerator?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <title>How many television sets does the family own?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <title>Does the family own a washing machine?</title>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <mandatory>true</mandatory>
        </question>
    </section>
</QuestionGroup>

