<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Afghanistan 2007</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Afghanistan 2007</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_afghanistan_2007_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are 16-years-old or younger?</text>
            <nickname>ppi_afghanistan_2007_family_members_0_to_16</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Seven or more</value>
            </choice>
            <choice order="2">
                <value>Five or six</value>
            </choice>
            <choice order="3">
                <value>Four</value>
            </choice>
            <choice order="4">
                <value>Three</value>
            </choice>
            <choice order="5">
                <value>Two</value>
            </choice>
            <choice order="6">
                <value>One</value>
            </choice>
            <choice order="7">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>Can both the male head/spouse and the female head/spouse read and write?</text>
            <nickname>ppi_afghanistan_2007_male_female_head_can_read_write</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No male head/spouse</value>
            </choice>
            <choice order="2">
                <value>No female head/spouse</value>
            </choice>
            <choice order="3">
                <value>No</value>
            </choice>
            <choice order="4">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What type of dwelling best describes where the household lives?</text>
            <nickname>ppi_afghanistan_2007_dwelling_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Temporary shelter/shack, part of a shared house, separate apartment, shared apartment, tent, or other</value>
            </choice>
            <choice order="2">
                <value>Single-family house</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>How many rooms (both exclusively yours and shared) does your household occupy (exclude corridors and balconies)?</text>
            <nickname>ppi_afghanistan_2007_rooms_for_family</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>One to four</value>
            </choice>
            <choice order="2">
                <value>Five or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Which main toilet facility does the household use?</text>
            <nickname>ppi_afghanistan_2007_toilet_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None (open field, bush) or sahrahi, dearan (area inside or outside compound but not pit), or other</value>
            </choice>
            <choice order="2">
                <value>Open pit</value>
            </choice>
            <choice order="3">
                <value>Traditional covered latrine</value>
            </choice>
            <choice order="4">
                <value>Improved latrine, or flush latrine</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>In the past 30 days, what has been the household's main source of cooking fuel?</text>
            <nickname>ppi_afghanistan_2007_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Animal dung, scavenged material/trash, bushes (ping)/twigs, branches, or other</value>
            </choice>
            <choice order="2">
                <value>Crop residues, firewood, charcoal/coal, kerosene or oil, gas, or electricity</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>How many stoves/gas cylinders does the household own?</text>
            <nickname>ppi_afghanistan_2007_owns_stove</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own any sewing machines?</text>
            <nickname>ppi_afghanistan_2007_owns_sewing_machine</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own any motorcycles or cars?</text>
            <nickname>ppi_afghanistan_2007_owns_motorcycle_car</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Motorcycle only</value>
            </choice>
            <choice order="3">
                <value>Car (regardless of motorcycle)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Did anyone in the household own or have access to any irrigated land in the most recent summer cultivation season, excluding a garden plot?</text>
            <nickname>ppi_afghanistan_2007_land_owned</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
