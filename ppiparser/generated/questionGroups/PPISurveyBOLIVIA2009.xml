<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Bolivia 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Bolivia 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_bolivia_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are there?</text>
            <nickname>ppi_bolivia_2009_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Seven or more</value>
            </choice>
            <choice order="2">
                <value>Six</value>
            </choice>
            <choice order="3">
                <value>Five</value>
            </choice>
            <choice order="4">
                <value>Four</value>
            </choice>
            <choice order="5">
                <value>Three</value>
            </choice>
            <choice order="6">
                <value>Two</value>
            </choice>
            <choice order="7">
                <value>One</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>How many household members ages 6 to 17 currently attend school at the level and grade that they enrolled in for this calendar year?</text>
            <nickname>ppi_bolivia_2009_family_members_6_10_17_in_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Not all</value>
            </choice>
            <choice order="2">
                <value>All</value>
            </choice>
            <choice order="3">
                <value>No children ages 6 to 17</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the main construction material of the floors of the residence?</text>
            <nickname>ppi_bolivia_2009_house_floors</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Earth, bricks, or other</value>
            </choice>
            <choice order="2">
                <value>Wooden planks, cement, hardwood floors, parquet, rugs or carpets</value>
            </choice>
            <choice order="3">
                <value>Tile (mosaic, stone, or ceramic)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the main fuel used for cooking?</text>
            <nickname>ppi_bolivia_2009_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Firewood, dung/manure, kerosene, LPG in a cylinder, or other</value>
            </choice>
            <choice order="2">
                <value>Piped-in natural gas, electricity, or does not cook</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Does the household own, have, or use a refrigerator or freezer?</text>
            <nickname>ppi_bolivia_2009_has_refrigerator_or_freezer</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household own, have, or use a dining-room set (table and chairs)?</text>
            <nickname>ppi_bolivia_2009_has_dining_table_and_chairs</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household own, have, or use a television?</text>
            <nickname>ppi_bolivia_2009_has_television</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own, have, or use a VCR or DVD player?</text>
            <nickname>ppi_bolivia_2009_has_vcr_or_dvd</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own, have, or use a stereo or hi-fi system?</text>
            <nickname>ppi_bolivia_2009_has_stereo</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Are any household members employed in blue-collar or white-collar jobs?</text>
            <nickname>ppi_bolivia_2009_blue_or_white_collar_job</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
