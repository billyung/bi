<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Brazil 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Brazil 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_brazil_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_brazil_2010_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Five or more</value>
            </choice>
            <choice order="2">
                <value>Four</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Two</value>
            </choice>
            <choice order="5">
                <value>One</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>Do any household members ages 5 to 18 go to private school or private pre-school?</text>
            <nickname>ppi_brazil_2010_family_members_5_to_18_in_private_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <choice order="3">
                <value>No members ages 5 to 18</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>How many years of schooling has the female head/spouse completed?</text>
            <nickname>ppi_brazil_2010_years_of_school_for_female_head</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Three or less</value>
            </choice>
            <choice order="2">
                <value>Four to eleven</value>
            </choice>
            <choice order="3">
                <value>Twelve or more</value>
            </choice>
            <choice order="4">
                <value>No female head/spouse</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>How many household members work as employees with a written contract, as civil servants for the government, or in the military?</text>
            <nickname>ppi_brazil_2010_empoyed_with_contract</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>In their main occupation, how many household members are managers, administrators, professionals in the arts and sciences, mid-level technicians, or clerks?</text>
            <nickname>ppi_brazil_2010_employed_at_mid_level</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>How many rooms does the residence have?</text>
            <nickname>ppi_brazil_2010_rooms_in_house</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>One to four</value>
            </choice>
            <choice order="2">
                <value>Five</value>
            </choice>
            <choice order="3">
                <value>Six</value>
            </choice>
            <choice order="4">
                <value>Seven</value>
            </choice>
            <choice order="5">
                <value>Eight or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>How does the household dispose of sewage?</text>
            <nickname>ppi_brazil_2010_sewage_disposal</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Ditch, other, or no bathroom</value>
            </choice>
            <choice order="2">
                <value>Simple hole, or directly into river, lake, or ocean</value>
            </choice>
            <choice order="3">
                <value>Septic tank not connected to public sewage/rainwater system</value>
            </choice>
            <choice order="4">
                <value>Septic tank connected to public sewage/rainwater system</value>
            </choice>
            <choice order="5">
                <value>('Direct connection to public sewage/rainwater system', 5)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household have a refrigerator?</text>
            <nickname>ppi_brazil_2010_has_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes, with one door</value>
            </choice>
            <choice order="3">
                <value>Yes, with two doors</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household have a washing machine?</text>
            <nickname>ppi_brazil_2010_has_washing_machine</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household have a cellular or land-line telephone?</text>
            <nickname>ppi_brazil_2010_has_phone</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Cellular but not land-line</value>
            </choice>
            <choice order="3">
                <value>Land-line but not cellular</value>
            </choice>
            <choice order="4">
                <value>Both</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
