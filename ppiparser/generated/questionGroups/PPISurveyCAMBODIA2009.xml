<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Cambodia 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Cambodia 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_cambodia_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_cambodia_2009_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Eight or more</value>
            </choice>
            <choice order="2">
                <value>Seven</value>
            </choice>
            <choice order="3">
                <value>Six</value>
            </choice>
            <choice order="4">
                <value>Five</value>
            </choice>
            <choice order="5">
                <value>Four</value>
            </choice>
            <choice order="6">
                <value>Three</value>
            </choice>
            <choice order="7">
                <value>One or two</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>How many children ages 7 to 15 attend school?</text>
            <nickname>ppi_cambodia_2009_family_members_7_to_15_in_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Not all</value>
            </choice>
            <choice order="2">
                <value>All, or no children ages 7 to 15</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the primary construction material of the outer wall of the dwelling unit occupied by the household?</text>
            <nickname>ppi_cambodia_2009_house_walls</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Bamboo or thatch, makeshift, salvaged, or improvised materials, other, or no data</value>
            </choice>
            <choice order="2">
                <value>Wood or logs, plywood, galvanized iron or aluminum, or fibrous cement</value>
            </choice>
            <choice order="3">
                <value>Concrete, brick, or stone</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What type of fuel does the household mainly use for cooking?</text>
            <nickname>ppi_cambodia_2009_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Firewood or other</value>
            </choice>
            <choice order="2">
                <value>Charcoal, firewood and charcoal, liquefied petroleum gas, kerosene, publicly-provided electricity, gas and electricity, privately-generated electricity, or none/does not cook</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What toilet facility does the household have?</text>
            <nickname>ppi_cambodia_2009_toilet_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Open land</value>
            </choice>
            <choice order="2">
                <value>None</value>
            </choice>
            <choice order="3">
                <value>Pit latrine, septic tank, other without septic tank, public toilet, shared toilet, or other</value>
            </choice>
            <choice order="4">
                <value>Connected to sewerage</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>How many bicycles and motorcycles does the household own?</text>
            <nickname>ppi_cambodia_2009_bicycles_and_motorcycles</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No bicycles, and no motorcycles</value>
            </choice>
            <choice order="2">
                <value>One bicycle, and no motorcycles</value>
            </choice>
            <choice order="3">
                <value>Two bicycles, and no motorcycles</value>
            </choice>
            <choice order="4">
                <value>Three or more bicycles, and no motorcycles</value>
            </choice>
            <choice order="5">
                <value>One or more motorcycles (regardless of bicycles)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household own a bed set?</text>
            <nickname>ppi_cambodia_2009_owns_bed_set</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own a wardrobe or cabinet?</text>
            <nickname>ppi_cambodia_2009_owns_wardrobe</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own a water pump?</text>
            <nickname>ppi_cambodia_2009_owns_water_pump</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household own a television?</text>
            <nickname>ppi_cambodia_2009_owns_television</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
