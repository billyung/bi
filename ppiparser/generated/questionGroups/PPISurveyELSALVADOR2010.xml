<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Elsalvador 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Elsalvador 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_elsalvador_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are 17-years-old or younger?</text>
            <nickname>ppi_elsalvador_2010_family_members_0_to_17</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Four or more</value>
            </choice>
            <choice order="2">
                <value>Three</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>
            <choice order="4">
                <value>One</value>
            </choice>
            <choice order="5">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>Not counting bathrooms, kitchen, hallways, or garage, how many rooms does the household have for its own use?</text>
            <nickname>ppi_elsalvador_2010_rooms_in_house</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>One</value>
            </choice>
            <choice order="2">
                <value>Two</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Four</value>
            </choice>
            <choice order="5">
                <value>Five or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>How many household members are salaried employees (be they temporary or permanent)?</text>
            <nickname>ppi_elsalvador_2010_salaried_employees</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>Last week, did the female head/spouse do any work (not counting household chores)?</text>
            <nickname>ppi_elsalvador_2010_female_head_worked_last_week</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <choice order="3">
                <value>There is no female head/spouse</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What is the main fuel used for cooking?</text>
            <nickname>ppi_elsalvador_2010_coking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Firewood, charcoal, kerosene, or other</value>
            </choice>
            <choice order="2">
                <value>Propane, electricity, or does not cook</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household have a refrigerator?</text>
            <nickname>ppi_elsalvador_2010_has_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household have a blender?</text>
            <nickname>ppi_elsalvador_2010_has_blender</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household have a television and/or a VCR or DVD?</text>
            <nickname>ppi_elsalvador_2010_has_vcr_or_dvd</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Only a television</value>
            </choice>
            <choice order="3">
                <value>Both a television and a VCR or DVD</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household have a radio and/or a stereo system?</text>
            <nickname>ppi_elsalvador_2010_has_stereo</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Only a radio, or only a stereo system</value>
            </choice>
            <choice order="3">
                <value>Both a radio and a stereo system</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household have a fan?</text>
            <nickname>ppi_elsalvador_2010_has_fan</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
