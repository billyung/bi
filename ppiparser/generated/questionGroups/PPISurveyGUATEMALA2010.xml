<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Guatemala 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Guatemala 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_guatemala_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are aged 13 or younger?</text>
            <nickname>ppi_guatemala_2010_family_members_0_to_13</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Five or more</value>
            </choice>
            <choice order="2">
                <value>Four</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Two</value>
            </choice>
            <choice order="5">
                <value>One</value>
            </choice>
            <choice order="6">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>Did all children ages 7 to 13 enroll for the current school year?</text>
            <nickname>ppi_guatemala_2010_all_family_members_7_to_13_in_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>No children ages 7 to 13</value>
            </choice>
            <choice order="3">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>Can the female head/spouse read and write?</text>
            <nickname>ppi_guatemala_2010_female_head_literate</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <choice order="3">
                <value>No female head/spouse</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>Do any household members work mainly as casual laborers or domestic workers?</text>
            <nickname>ppi_guatemala_2010_empoyed_as_casual_labor</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Yes</value>
            </choice>
            <choice order="2">
                <value>No</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What is the main construction material of the residence's floors?</text>
            <nickname>ppi_guatemala_2010_house_floors</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Earth, sand, wood, parquet, or other</value>
            </choice>
            <choice order="2">
                <value>Mud bricks or cement slab</value>
            </choice>
            <choice order="3">
                <value>Formed cement bricks</value>
            </choice>
            <choice order="4">
                <value>Granite or ceramic</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household have a refrigerator?</text>
            <nickname>ppi_guatemala_2010_has_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household have a gas or electric stove?</text>
            <nickname>ppi_guatemala_2010_has_gas_electric_stove</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household have a stone mill?</text>
            <nickname>ppi_guatemala_2010_has_stone_mill</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Yes</value>
            </choice>
            <choice order="2">
                <value>No</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household have an electric iron?</text>
            <nickname>ppi_guatemala_2010_has_electric_iron</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>If any household member works mainly in agriculture, animal husbandry, hunting, or fishing, does the household have any cows, bulls, calves, pigs, horses, burros, or mules?</text>
            <nickname>ppi_guatemala_2010_enmployed_in_agriculature_or_animals</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <choice order="3">
                <value>No one works mainly in agriculture</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
