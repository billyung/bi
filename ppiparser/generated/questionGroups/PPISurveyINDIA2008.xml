<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI India 2008</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI India 2008</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_india_2008_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many people aged 0 to 17 are in the household?</text>
            <nickname>ppi_india_2008_family_members_0_to_17</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Five or more</value>
            </choice>
            <choice order="2">
                <value>Four</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Two</value>
            </choice>
            <choice order="5">
                <value>One</value>
            </choice>
            <choice order="6">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What is the household's principal occupation?</text>
            <nickname>ppi_india_2008_principal_occupation</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Labourers (agricultural, plantation, other farm), hunters, tobacco preparers and tobacco product makers, and other labourers</value>
            </choice>
            <choice order="2">
                <value>Others</value>
            </choice>
            <choice order="3">
                <value>Professionals, technicians, clerks, administrators, managers, executives, directors, supervisors, and teachers</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>Is the residence all pucca (burnt bricks, stone, cement, concrete, jackboard/cement-plastered reeds, timber, tiles, galvanised tin or asbestos cement sheets)?</text>
            <nickname>ppi_india_2008_has_pucca_home</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the household's primary source of energy for cooking?</text>
            <nickname>ppi_india_2008_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Firewood and chips, charcoal, or none</value>
            </choice>
            <choice order="2">
                <value>Others</value>
            </choice>
            <choice order="3">
                <value>LPG</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Does the household own a television?</text>
            <nickname>ppi_india_2008_owns_television</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household own a bicycle, scooter, or motor cycle?</text>
            <nickname>ppi_india_2008_owns_bicycle_scooter_motorcycle</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household own an almirah/dressing table?</text>
            <nickname>ppi_india_2008_owns_almirah</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own a sewing machine?</text>
            <nickname>ppi_india_2008_owns_sewing_machine</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>How many pressure cookers or pressure pans does the household own?</text>
            <nickname>ppi_india_2008_pressure_cookers</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>How many electric fans does the household own?</text>
            <nickname>ppi_india_2008_electric_fans</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
