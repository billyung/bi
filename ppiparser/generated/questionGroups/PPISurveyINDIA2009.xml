<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI India 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI India 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_india_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are 17-years-old or younger?</text>
            <nickname>ppi_india_2009_family_members_0_to_17</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Four or more</value>
            </choice>
            <choice order="2">
                <value>Three</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>
            <choice order="4">
                <value>One</value>
            </choice>
            <choice order="5">
                <value>Zero</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What is the general education level of the male head/spouse?</text>
            <nickname>ppi_india_2009_male_head_education_level</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No male head/spouse</value>
            </choice>
            <choice order="2">
                <value>Not literate, no formal school, or primary or below</value>
            </choice>
            <choice order="3">
                <value>Middle</value>
            </choice>
            <choice order="4">
                <value>Secondary or higher secondary</value>
            </choice>
            <choice order="5">
                <value>Diploma/certificate course, graduate, or postgraduate and above</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the household type?</text>
            <nickname>ppi_india_2009_household_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Labour (agricultural, casual, or other)</value>
            </choice>
            <choice order="2">
                <value>Self-employed (agriculture or non-agriculture), regular wage/salary-earning, or others</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the primary source of energy for cooking?</text>
            <nickname>ppi_india_2009_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Firewood and chips, dung cake, kerosene, charcoal, coke or coal, gobar gas, or others</value>
            </choice>
            <choice order="2">
                <value>LPG or electricity</value>
            </choice>
            <choice order="3">
                <value>No cooking arrangement</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Does the household possess any casseroles, thermos, or thermoware?</text>
            <nickname>ppi_india_2009_owns_casseroles_thermos_thermoware</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household possess a television and a VCR/VCD/DVD player?</text>
            <nickname>ppi_india_2009_owns_vcr_vcd_dvd</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No, neither one</value>
            </choice>
            <choice order="2">
                <value>Yes, only one</value>
            </choice>
            <choice order="3">
                <value>Yes, both</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household possess a mobile handset and a telephone instrument (landline)?</text>
            <nickname>ppi_india_2009_phones</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No, neither one</value>
            </choice>
            <choice order="2">
                <value>Yes, only a mobile</value>
            </choice>
            <choice order="3">
                <value>Yes, a landline, regardless of mobile</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household possess a sewing machine?</text>
            <nickname>ppi_india_2009_owns_sewing_machine</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household possess an almirah/dressing table?</text>
            <nickname>ppi_india_2009_onws_almirah</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household possess a bicycle, motorcycle/scooter, or motor car/jeep?</text>
            <nickname>ppi_india_2009_owns_bicycle_scooter_car</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No, none</value>
            </choice>
            <choice order="2">
                <value>Yes, bicycle only, no motorcycle/scooter, or car</value>
            </choice>
            <choice order="3">
                <value>Motorcycle/scooter, but no car (regardless of bicycle)</value>
            </choice>
            <choice order="4">
                <value>Motor car/jeep (regardless of others)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
