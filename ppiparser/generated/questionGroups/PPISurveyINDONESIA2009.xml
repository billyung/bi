<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Indonesia 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Indonesia 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_indonesia_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_indonesia_2009_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Six or more</value>
            </choice>
            <choice order="2">
                <value>Five</value>
            </choice>
            <choice order="3">
                <value>Four</value>
            </choice>
            <choice order="4">
                <value>Three</value>
            </choice>
            <choice order="5">
                <value>Two</value>
            </choice>
            <choice order="6">
                <value>One</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>How many household members aged 5 to 18 are currently attending school?</text>
            <nickname>ppi_indonesia_2009_family_members_5_to_18_in_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Not all, or no children aged 5 to 18</value>
            </choice>
            <choice order="2">
                <value>All</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>In the past week, how many household members ages 11 or older worked or had a job/work/business?</text>
            <nickname>ppi_indonesia_2009_11_and_up_worked_last_week</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One or two</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Four or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the main source of drinking water of the household?</text>
            <nickname>ppi_indonesia_2009_water_source</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Public utilities retail, safe/unsafe well, safe/unsafe water spring, river, rain water, or other</value>
            </choice>
            <choice order="2">
                <value>Public utilities (in pipes), or drilled/pumped well</value>
            </choice>
            <choice order="3">
                <value>From manufacturing</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What type of toilet does the household have?</text>
            <nickname>ppi_indonesia_2009_toilet_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Toilet over water, hole in ground/river, no toilet, or no one uses bathroom facility</value>
            </choice>
            <choice order="2">
                <value>Flush/sitting toilet</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>What is the household's main flooring material?</text>
            <nickname>ppi_indonesia_2009_house_floors</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Earth/soil</value>
            </choice>
            <choice order="2">
                <value>Not earth/soil</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>What is the household's main ceiling material?</text>
            <nickname>ppi_indonesia_2009_house_ceiling</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Bamboo, other, or does not have</value>
            </choice>
            <choice order="2">
                <value>Concrete, gypsum, wood, or asbestos</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own a refrigerator?</text>
            <nickname>ppi_indonesia_2009_owns_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own a motorcycle?</text>
            <nickname>ppi_indonesia_2009_owns_motorcycle</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household own a television?</text>
            <nickname>ppi_indonesia_2009_owns_television</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
