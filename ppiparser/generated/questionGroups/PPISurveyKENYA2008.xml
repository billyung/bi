<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Kenya 2008</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Kenya 2008</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_kenya_2008_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are aged 25 or younger?</text>
            <nickname>ppi_kenya_2008_family_members_0_to_25</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>3 or more</value>
            </choice>
            <choice order="2">
                <value>0, 1, or 2</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>How many household members aged 6 to 17 are currently attending school?</text>
            <nickname>ppi_kenya_2008_family_members_6_to_17_in_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Not all</value>
            </choice>
            <choice order="2">
                <value>All</value>
            </choice>
            <choice order="3">
                <value>No children aged 6 to 17</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the material of the walls of the house?</text>
            <nickname>ppi_kenya_2008_house_walls</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Mud/cow dung; grass/sticks/makuti;</value>
            </choice>
            <choice order="2">
                <value>Other</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What kind of toilet facility does your household use?</text>
            <nickname>ppi_kenya_2008_toilet_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Other</value>
            </choice>
            <choice order="2">
                <value>Flush to sewer; flush to septic tank; pan/bucket; covered pit latrine; or ventilation improved pit latrine</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Does the household own a TV?</text>
            <nickname>ppi_kenya_2008_owns_television</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household own a sofa?</text>
            <nickname>ppi_kenya_2008_owns_sofa</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household own a stove?</text>
            <nickname>ppi_kenya_2008_owns_stove</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own a radio?</text>
            <nickname>ppi_kenya_2008_owns_radio</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own a bicycle?</text>
            <nickname>ppi_kenya_2008_owns_bicycle</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>How many head of cattle are owned by the household currently?</text>
            <nickname>ppi_kenya_2008_cattle_owned</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None or unknown</value>
            </choice>
            <choice order="2">
                <value>1 or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
