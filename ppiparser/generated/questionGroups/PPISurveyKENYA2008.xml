<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Kenya 2008</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Kenya 2008</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_kenya_2008_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_kenya_2008_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Nine or more</value>
            </choice>
            <choice order="2">
                <value>Seven or eight</value>
            </choice>
            <choice order="3">
                <value>Six</value>
            </choice>
            <choice order="4">
                <value>Five</value>
            </choice>
            <choice order="5">
                <value>Four</value>
            </choice>
            <choice order="6">
                <value>Three</value>
            </choice>
            <choice order="7">
                <value>One or two</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What is the highest school grade that the female head/spouse has completed?</text>
            <nickname>ppi_kenya_2008_female_head_education_level</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None, or pre-school</value>
            </choice>
            <choice order="2">
                <value>Primary standards 1 to 6</value>
            </choice>
            <choice order="3">
                <value>Primary standard 7</value>
            </choice>
            <choice order="4">
                <value>Primary standard 8, or secondary</value>
            </choice>
            <choice order="5">
                <value>No female head/spouse</value>
            </choice>
            <choice order="6">
                <value>Secondary form 4 or higher</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What kind of business (type of industry) is the main occupation of the male head/spouse connected with?</text>
            <nickname>ppi_kenya_2008_male_head_occupation</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Does not work</value>
            </choice>
            <choice order="2">
                <value>No male head/spouse</value>
            </choice>
            <choice order="3">
                <value>Agriculture, hunting, forestry, fishing, mining, or quarrying</value>
            </choice>
            <choice order="4">
                <value>Any other</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>How many habitable rooms does this household occupy in its main dwelling (do not count bathrooms, toilets, storerooms, or garage)?</text>
            <nickname>ppi_kenya_2008_house_rooms</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>One</value>
            </choice>
            <choice order="2">
                <value>Two</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Four or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>The floor of the main dwelling is predominantly made of what</text>
            <nickname>ppi_kenya_2008_house_floors</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Wood, earth, or other</value>
            </choice>
            <choice order="2">
                <value>Cement, or tiles</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>What is the main source of lighting fuel for the household?</text>
            <nickname>ppi_kenya_2008_lighting_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Collected firewood, purchased firewood, grass, or dry cell (torch)</value>
            </choice>
            <choice order="2">
                <value>Paraffin, candles, biogas, or other</value>
            </choice>
            <choice order="3">
                <value>Electricity, solar, or gas</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does your household own any irons (charcoal or electric)?</text>
            <nickname>ppi_kenya_2008_owns_iron</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>How many mosquito nets does your household own?</text>
            <nickname>ppi_kenya_2008_mosquito_nets</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>How many towels does your household own?</text>
            <nickname>ppi_kenya_2008_towels</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>How many frying pans does your household own?</text>
            <nickname>ppi_kenya_2008_frying_pans</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
