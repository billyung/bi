<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Malawi 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Malawi 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_malawi_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are there?</text>
            <nickname>ppi_malawi_2010_family_members_0_to_14</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Eight or more</value>
            </choice>
            <choice order="2">
                <value>Seven</value>
            </choice>
            <choice order="3">
                <value>Six</value>
            </choice>
            <choice order="4">
                <value>Five</value>
            </choice>
            <choice order="5">
                <value>Four</value>
            </choice>
            <choice order="6">
                <value>Three</value>
            </choice>
            <choice order="7">
                <value>Two</value>
            </choice>
            <choice order="8">
                <value>One</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What general type of construction materials are used for the dwelling?</text>
            <nickname>ppi_malawi_2010_family_members_in_agriculture</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Tradition</value>
            </choice>
            <choice order="2">
                <value>Semi-permanent</value>
            </choice>
            <choice order="3">
                <value>Permanent</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What was your main source of drinking water in the past month?</text>
            <nickname>ppi_malawi_2010_water_source</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Communal standpipe; communal open, unprotected well; communal hand pump; lake/reservoir, river/spring, or other</value>
            </choice>
            <choice order="2">
                <value>Piped into dwelling; piped outside dwelling (personal); personal hand pump; protected spring; or personal open, unprotected well</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is your main source of cooking fuel?</text>
            <nickname>ppi_malawi_2010_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Collected firewood, crop residue, or animal waste</value>
            </choice>
            <choice order="2">
                <value>Purchased firewood</value>
            </choice>
            <choice order="3">
                <value>Paraffin, electricity, gas, charcoal, saw dust, or other</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What is your main source of lighting fuel?</text>
            <nickname>ppi_malawi_2010_lighting_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Collected firewood, grass, or other</value>
            </choice>
            <choice order="2">
                <value>Paraffin</value>
            </choice>
            <choice order="3">
                <value>Purchased firewood, electricity, gas, battery/dry cell (torch), or candles</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does your household own a lantern (paraffin)?</text>
            <nickname>ppi_malawi_2010_owns_lantern</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does your household own a chair, table, upholstered chair, sofa set, or coffee table?</text>
            <nickname>ppi_malawi_2010_owns_furnature</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does your household own a bicycle, motorcycle/scooter, or car?</text>
            <nickname>ppi_malawi_2010_owns_bicycle_scooter_car</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does your household own a tape or CD player/HiFi?</text>
            <nickname>ppi_malawi_2010_owns_HiFi</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does your household own an iron (for pressing clothes)?</text>
            <nickname>ppi_malawi_2010_owns_iron</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
