<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Mexico 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Mexico 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_mexico_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are ages 0 to 17?</text>
            <nickname>ppi_mexico_2009_family_members_0_to_17</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Four or more</value>
            </choice>
            <choice order="2">
                <value>Three</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>
            <choice order="4">
                <value>One</value>
            </choice>
            <choice order="5">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What is the highest level that the female head/ spouse has passed in school?</text>
            <nickname>ppi_mexico_2009_female_head_education_level</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Up to third grade</value>
            </choice>
            <choice order="3">
                <value>Fourth grade through high school</value>
            </choice>
            <choice order="4">
                <value>College preparatory 1 - 3</value>
            </choice>
            <choice order="5">
                <value>Normal/technical/commercial</value>
            </choice>
            <choice order="6">
                <value>Professional, master's or doctorate</value>
            </choice>
            <choice order="7">
                <value>No female head/spouse</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>How many household members have a written employment contract for a salary or for an indefinite period?</text>
            <nickname>ppi_mexico_2009_empoyed_with_contract</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the main material of the floor of this residence?</text>
            <nickname>ppi_mexico_2009_house_floor</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Dirt</value>
            </choice>
            <choice order="2">
                <value>Cement/concrete</value>
            </choice>
            <choice order="3">
                <value>Other</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>How is water supplied to the residence's toilet for flushing?</text>
            <nickname>ppi_mexico_2009_toilet_water_supply</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No toilet, or no water supply</value>
            </choice>
            <choice order="2">
                <value>Carried by bucket</value>
            </choice>
            <choice order="3">
                <value>Piped</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the residence have a medium sink for washing dishes?</text>
            <nickname>ppi_mexico_2009_has_sink_for_dishes</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>What fuel do you usually use to cook or heat food?</text>
            <nickname>ppi_mexico_2009_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Firewood</value>
            </choice>
            <choice order="2">
                <value>Other</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household have a blender?</text>
            <nickname>ppi_mexico_2009_has_blender</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household have an electric iron?</text>
            <nickname>ppi_mexico_2009_has_iron</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>How many televisions does the household have?</text>
            <nickname>ppi_mexico_2009_televisions</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>
            <choice order="4">
                <value>Three or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
