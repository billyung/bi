<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Palestine 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Palestine 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_palestine_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_palestine_2010_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Ten or more</value>
            </choice>
            <choice order="2">
                <value>Nine</value>
            </choice>
            <choice order="3">
                <value>Eight</value>
            </choice>
            <choice order="4">
                <value>Five, six, or seven</value>
            </choice>
            <choice order="5">
                <value>Four</value>
            </choice>
            <choice order="6">
                <value>One, two, or three</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What is the main building material used in the exterior walls of the residence?</text>
            <nickname>ppi_palestine_2010_house_walls</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Cement cob, mud, or other</value>
            </choice>
            <choice order="2">
                <value>Cleaned stone, stone and cement, old stone, or concrete</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>Does the household have a solar water heater?</text>
            <nickname>ppi_palestine_2010_has_solar_water_heater</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>Does the household have a vacuum cleaner?</text>
            <nickname>ppi_palestine_2010_has_vacuum</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Does the household have a land-line and/or cellular telephone?</text>
            <nickname>ppi_palestine_2010_has_phone</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Only cellular</value>
            </choice>
            <choice order="3">
                <value>Land-line (regardless of cellular)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household have a T.V. and a VCR and/or DVD?</text>
            <nickname>ppi_palestine_2010_has_tv_vcr_dvd</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Only T.V.</value>
            </choice>
            <choice order="3">
                <value>T.V. and VCR and/or DVD</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household have a satellite dish?</text>
            <nickname>ppi_palestine_2010_has_satellite_dish</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household have a computer?</text>
            <nickname>ppi_palestine_2010_has_computer</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household have a bookcase?</text>
            <nickname>ppi_palestine_2010_has_bookcase</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>How many household members are employed?</text>
            <nickname>ppi_palestine_2010_family_members_employed</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
