<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Peru 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Peru 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_peru_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many household members are 17-years-old or younger?</text>
            <nickname>ppi_peru_2009_family_members_0_to_17</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Four or more</value>
            </choice>
            <choice order="2">
                <value>Three</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>
            <choice order="4">
                <value>One</value>
            </choice>
            <choice order="5">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What is the highest educational level that the female head/spouse completed?</text>
            <nickname>ppi_peru_2009_female_head_education_level</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None, pre-school, or kindergarten</value>
            </choice>
            <choice order="2">
                <value>Grade school (incomplete)</value>
            </choice>
            <choice order="3">
                <value>Grade school (complete)</value>
            </choice>
            <choice order="4">
                <value>High school (incomplete)</value>
            </choice>
            <choice order="5">
                <value>High school (complete), non-university superior (incomplete) or no female head</value>
            </choice>
            <choice order="6">
                <value>Non-university superior (complete) or higher</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the main material of the floors?</text>
            <nickname>ppi_peru_2009_house_floors</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Earth, wood planks, other, or no residence</value>
            </choice>
            <choice order="2">
                <value>Cement</value>
            </choice>
            <choice order="3">
                <value>Parquet, polished wood, linoleum, vinyl, tile, or similar</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the main material of the exterior walls?</text>
            <nickname>ppi_peru_2009_house_walls</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Adobe, mud, or matting</value>
            </choice>
            <choice order="2">
                <value>Wattle and daub, wood, matting, brick or cement blocks, stone blocks with lime or cement, other, or no residence</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Excluding bathrooms, kitchen, hallways, and garage, how many rooms does the residence have?</text>
            <nickname>ppi_peru_2009_house_rooms</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>One</value>
            </choice>
            <choice order="2">
                <value>Two</value>
            </choice>
            <choice order="3">
                <value>Three, four, or five</value>
            </choice>
            <choice order="4">
                <value>Six or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>What fuel does the household most frequently use for cooking?</text>
            <nickname>ppi_peru_2009_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Other</value>
            </choice>
            <choice order="2">
                <value>Firewood, charcoal, or kerosene</value>
            </choice>
            <choice order="3">
                <value>Gas (LPG or natural)</value>
            </choice>
            <choice order="4">
                <value>Electricity or does not cook</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household have a refrigerator/freezer?</text>
            <nickname>ppi_peru_2009_has_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>How many color televisions does the household have?</text>
            <nickname>ppi_peru_2009_color_televisions</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household have a blender?</text>
            <nickname>ppi_peru_2009_has_blender</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household have an iron?</text>
            <nickname>ppi_peru_2009_has_iron</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
