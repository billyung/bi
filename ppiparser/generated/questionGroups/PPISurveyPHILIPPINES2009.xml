<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Philippines 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Philippines 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_philippines_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many people in the family are aged 0 to 14?</text>
            <nickname>ppi_philippines_2009_family_members_0_to_14</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Five or more</value>
            </choice>
            <choice order="2">
                <value>Four</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Two</value>
            </choice>
            <choice order="5">
                <value>One</value>
            </choice>
            <choice order="6">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>Do all children in the family of ages 6 to 14 go to school?</text>
            <nickname>ppi_philippines_2009_all_family_members_6_to_14_in_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>
            <choice order="3">
                <value>No children ages 6 to 14</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the education level of the female head/spouse?</text>
            <nickname>ppi_philippines_2009_female_head_education_level</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Graduate primary or less</value>
            </choice>
            <choice order="2">
                <value>First- to fourth-year secondary</value>
            </choice>
            <choice order="3">
                <value>Graduate secondary</value>
            </choice>
            <choice order="4">
                <value>First-year college or higher, or no female head/spouse</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>Do any family members have salaried employment?</text>
            <nickname>ppi_philippines_2009_salaried_employment</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What are the house's outer walls made of?</text>
            <nickname>ppi_philippines_2009_house_walls</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Light materials (cogon, nipa, or sawali, bamboo, anahaw)</value>
            </choice>
            <choice order="2">
                <value>Strong materials (iron, aluminum, tile, concrete, brick, stone, wood, asbestos)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>What is the house's roof made of?</text>
            <nickname>ppi_philippines_2009_house_roof</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Light materials (Salvaged, makeshift, cogon, nipa, or anahaw)</value>
            </choice>
            <choice order="2">
                <value>Strong materials (Galvanized iron, aluminum tile, concrete, brick, stone, or asbestos)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>What kind of toilet facility does the family have?</text>
            <nickname>ppi_philippines_2009_toilet_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None, open pit, closed pit, or other</value>
            </choice>
            <choice order="2">
                <value>Water sealed</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the family own a refrigerator?</text>
            <nickname>ppi_philippines_2009_owns_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>How many television sets does the family own?</text>
            <nickname>ppi_philippines_2009_televisions</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the family own a washing machine?</text>
            <nickname>ppi_philippines_2009_owns_washing_machine</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
