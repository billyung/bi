<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Russia 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Russia 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_russia_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_russia_2010_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Five or more</value>
            </choice>
            <choice order="2">
                <value>Four</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Two</value>
            </choice>
            <choice order="5">
                <value>One</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>In their main line of work, are any household members administrators or heads/leaders of government, agencies, organizations, or state businesses, highly skilled specialists/professionals, skilled technicians, or white-collar employees?</text>
            <nickname>ppi_russia_2010_employed_in_highly_skilled_work</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the total area of the residence in meters squared?</text>
            <nickname>ppi_russia_2010_house_area</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>24 or less</value>
            </choice>
            <choice order="2">
                <value>25 to 39</value>
            </choice>
            <choice order="3">
                <value>40 to 59</value>
            </choice>
            <choice order="4">
                <value>60 to 99</value>
            </choice>
            <choice order="5">
                <value>100 or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the source of hot water for the residence?</text>
            <nickname>ppi_russia_2010_hot_water_source</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Individual water heater</value>
            </choice>
            <choice order="3">
                <value>Centralized</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>How many color televisions does the household own?</text>
            <nickname>ppi_russia_2010_color_televisions</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>How many VCRs and DVDs does the household own?</text>
            <nickname>ppi_russia_2010_vcrs_and_dvds</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household own a microwave?</text>
            <nickname>ppi_russia_2010_owns_microwave</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own a personal computer?</text>
            <nickname>ppi_russia_2010_owns_computer</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>How many land-line and cellular telephones does the household own?</text>
            <nickname>ppi_russia_2010_phones</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One or more land-lines, and no cellular</value>
            </choice>
            <choice order="3">
                <value>No land-lines, and one cellular</value>
            </choice>
            <choice order="4">
                <value>One or more land-lines, and one cellular</value>
            </choice>
            <choice order="5">
                <value>No land-lines, and two or more cellular</value>
            </choice>
            <choice order="6">
                <value>One or more land-lines, and two cellular</value>
            </choice>
            <choice order="7">
                <value>One or more land-lines, and three or more cellular</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household own an automobile?</text>
            <nickname>ppi_russia_2010_owns_car</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
