<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Southafrica 2009</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Southafrica 2009</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_southafrica_2009_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_southafrica_2009_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Seven or more</value>
            </choice>
            <choice order="2">
                <value>Six</value>
            </choice>
            <choice order="3">
                <value>Five</value>
            </choice>
            <choice order="4">
                <value>Four</value>
            </choice>
            <choice order="5">
                <value>Three</value>
            </choice>
            <choice order="6">
                <value>Two</value>
            </choice>
            <choice order="7">
                <value>One</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>How many household members' main income is from salaries and wages, net profit from business or professional practice/ activities, or commercial farming?</text>
            <nickname>ppi_southafrica_2009_wage_earners</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>How many rooms are in the dwelling unit, including bedrooms, living rooms, dining rooms, kitchens, and bathrooms, etc.?</text>
            <nickname>ppi_southafrica_2009_house_rooms</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Four or less</value>
            </choice>
            <choice order="2">
                <value>Five or six</value>
            </choice>
            <choice order="3">
                <value>Seven or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the main material used for the roof of the main dwelling?</text>
            <nickname>ppi_southafrica_2009_house_roof</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Bricks, cement block/concrete, corrugated iron/zinc, wood, plastic, cardboard, mixture of mud and cement, wattle and daub, mud, thatching, asbestos, or other</value>
            </choice>
            <choice order="2">
                <value>Tile</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What type of toilet facility is available for this household?</text>
            <nickname>ppi_southafrica_2009_toilet_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Pit latrine off-site with or without ventilation pipe, bucket toilet off-site, none, or other</value>
            </choice>
            <choice order="2">
                <value>Pit latrine on-site with or without ventilation pipe, or bucket toilet on-site</value>
            </choice>
            <choice order="3">
                <value>Flush toilet in dwelling/on-site/off-site with off-site/on-site disposal (septic tank), or chemical toilet on-site or off-site</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>What is the main source of cooking energy/fuel for this household?</text>
            <nickname>ppi_southafrica_2009_cooking_fuel</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Paraffin, coal, wood, animal dung, none, or other</value>
            </choice>
            <choice order="2">
                <value>Electricity from mains/generator/solar, or gas</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household own a washing machine?</text>
            <nickname>ppi_southafrica_2009_owns_washing_machine</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own a videocassette recorder/DVD?</text>
            <nickname>ppi_southafrica_2009_owns_vcr_dvd</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own a microwave?</text>
            <nickname>ppi_southafrica_2009_owns_microwave</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household own a refrigerator or freezer?</text>
            <nickname>ppi_southafrica_2009_owns_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
