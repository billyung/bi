<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Srilanka 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Srilanka 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_srilanka_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_srilanka_2010_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Six or more</value>
            </choice>
            <choice order="2">
                <value>Five</value>
            </choice>
            <choice order="3">
                <value>Four</value>
            </choice>
            <choice order="4">
                <value>Three</value>
            </choice>
            <choice order="5">
                <value>One or two</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>How many household members are employees of government or semi-government entities?</text>
            <nickname>ppi_srilanka_2010_female_head_education_level</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>What is the highest educational level that the female head/spouse has passed?</text>
            <nickname>ppi_srilanka_2010_house_floors</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Year 1 or less</value>
            </choice>
            <choice order="2">
                <value>Years 2 to 7</value>
            </choice>
            <choice order="3">
                <value>Years 8 or 9</value>
            </choice>
            <choice order="4">
                <value>Year 10</value>
            </choice>
            <choice order="5">
                <value>No female head/spouse</value>
            </choice>
            <choice order="6">
                <value>G.C.E. (O/L) or equivalent, Year 12, or higher</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>What is the principal construction material of the floors?</text>
            <nickname>ppi_srilanka_2010_house_bedrooms</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Mud, or other</value>
            </choice>
            <choice order="2">
                <value>Cement</value>
            </choice>
            <choice order="3">
                <value>Terrazzo/tile</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>How many bedrooms does the household use?</text>
            <nickname>ppi_srilanka_2010_owns_fan</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>
            <choice order="4">
                <value>Three or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>Does the household own an electric fan?</text>
            <nickname>ppi_srilanka_2010_owns_TV_and_DVD</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household own a television and a VCD/DVD?</text>
            <nickname>ppi_srilanka_2010_owns_cooker</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No television</value>
            </choice>
            <choice order="2">
                <value>Television, but no VCD/DVD</value>
            </choice>
            <choice order="3">
                <value>Television and VCD/DVD</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own a cooker (gas, kerosene, or electric)?</text>
            <nickname>ppi_srilanka_2010_owns_refrigerator</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own a refrigerator?</text>
            <nickname>ppi_srilanka_2010_owns_transportation</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>Does the household own a bicycle; motorcycle, scooter, or three-wheeler; or motor car, van, bus, lorry, 2-wheel or 4-wheel tractor?</text>
            <nickname>ppi_srilanka_2010_</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Bicycle only</value>
            </choice>
            <choice order="3">
                <value>Motorcycle etc., but no motor car etc. (regardless of bicycle)</value>
            </choice>
            <choice order="4">
                <value>Motorcycle etc. (regardless of bicycle or motor car etc.)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
