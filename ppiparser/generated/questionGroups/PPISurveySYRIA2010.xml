<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Syria 2010</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Syria 2010</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_syria_2010_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>How many members does the household have?</text>
            <nickname>ppi_syria_2010_family_members</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Eight or more</value>
            </choice>
            <choice order="2">
                <value>Seven</value>
            </choice>
            <choice order="3">
                <value>Six</value>
            </choice>
            <choice order="4">
                <value>Five</value>
            </choice>
            <choice order="5">
                <value>Four</value>
            </choice>
            <choice order="6">
                <value>Three</value>
            </choice>
            <choice order="7">
                <value>One or two</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>What type of residence does the household live in?</text>
            <nickname>ppi_syria_2010_residence_type</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Arabic house, or other</value>
            </choice>
            <choice order="2">
                <value>Villa, or apartment</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>How many rooms does the residence have?</text>
            <nickname>ppi_syria_2010_house_rooms</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>One</value>
            </choice>
            <choice order="2">
                <value>Two or three</value>
            </choice>
            <choice order="3">
                <value>Four</value>
            </choice>
            <choice order="4">
                <value>Five or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>Does the household have both a refrigerator and a freezer?</text>
            <nickname>ppi_syria_2010_has_refrigerator_freezer</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>Does the household have an automatic washing machine?</text>
            <nickname>ppi_syria_2010_has_washing_machine</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>How many complete bedroom sets does the household have?</text>
            <nickname>ppi_syria_2010_bedroom_sets</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>Does the household have a chandelier?</text>
            <nickname>ppi_syria_2010_has_chandelier</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>How many fans does the household have?</text>
            <nickname>ppi_syria_2010_fans</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two</value>
            </choice>
            <choice order="4">
                <value>Three or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>Does the household own a motorcycle or car?</text>
            <nickname>ppi_syria_2010_owns_motorcycle_car</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>Motorcycle only</value>
            </choice>
            <choice order="3">
                <value>Car (regardless of motorcycle)</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>What is the place of work of the male head/spouse in his main profession?</text>
            <nickname>ppi_syria_2010_place_of_work</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Farm, or does not work</value>
            </choice>
            <choice order="2">
                <value>No male head/spouse</value>
            </choice>
            <choice order="3">
                <value>Enterprise, or at home</value>
            </choice>
            <choice order="4">
                <value>Other</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
