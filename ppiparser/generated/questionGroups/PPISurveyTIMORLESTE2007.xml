<?xml version="1.0" encoding="UTF-8"?>
<QuestionGroup xmlns="http://www.mifos.org/QuestionGroupDefinition"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.mifos.org/QuestionGroupDefinition QuestionGroupDefinition.xsd ">
    <ppi>true</ppi>
    <title>PPI Timorleste 2007</title>
    <editable>false</editable>
    <eventSource>
        <event>Create</event>
        <source>Client</source>
    </eventSource>
    <section order="1">
        <name>PPI Timorleste 2007</name>
        <question order="1">
            <text>Date Survey Was Taken</text>
            <nickname>ppi_timorleste_2007_survey_date</nickname>
            <type>DATE</type>
            <mandatory>true</mandatory>
        </question>
        <question order="2">
            <text>In what district does the household live?</text>
            <nickname>ppi_timorleste_2007_district</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Ainaro, Manufahi, or Manatuto</value>
            </choice>
            <choice order="2">
                <value>Aileu, Dili, or Ermera</value>
            </choice>
            <choice order="3">
                <value>Bobonaro, Cova Lima, Liquiçá, or Oecussi</value>
            </choice>
            <choice order="4">
                <value>Baucau, Lautém, and Viqueque</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="3">
            <text>How many household members are 17-years-old or younger?</text>
            <nickname>ppi_timorleste_2007_family_members_0_to_17</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Six or more</value>
            </choice>
            <choice order="2">
                <value>Four or five</value>
            </choice>
            <choice order="3">
                <value>Three</value>
            </choice>
            <choice order="4">
                <value>Two</value>
            </choice>
            <choice order="5">
                <value>One</value>
            </choice>
            <choice order="6">
                <value>None</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="4">
            <text>Are all household members ages 8 to 17 currently attending school?</text>
            <nickname>ppi_timorleste_2007_family_members_6_to_17_in_school</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No, or no members 8 to 17</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="5">
            <text>In their main occupation in the past 12 months, did any household members have a wage job or a non-wage, non-farming job?</text>
            <nickname>ppi_timorleste_2007_family_members_had_job_last_year</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="6">
            <text>What is the highest level and class that the male head/spouse has completed in school?</text>
            <nickname>ppi_timorleste_2007_male_head_education</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None, pre-school, or primary class 1</value>
            </choice>
            <choice order="2">
                <value>Primary class 2 to 5</value>
            </choice>
            <choice order="3">
                <value>No male head/spouse</value>
            </choice>
            <choice order="4">
                <value>Primary class 6, to pre-secondary class 2</value>
            </choice>
            <choice order="5">
                <value>Pre-secondary class 3, or higher</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="7">
            <text>What is the major construction material of the external walls?</text>
            <nickname>ppi_timorleste_2007_house_walls</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Mud, wood, bamboo, rattan, tin, or other</value>
            </choice>
            <choice order="2">
                <value>Brick, concrete, or unbaked brick</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="8">
            <text>What is the primary material of the floor?</text>
            <nickname>ppi_timorleste_2007_house_floors</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>Earth/clay, wood, bamboo, or other</value>
            </choice>
            <choice order="2">
                <value>Concrete/brick, floor tile/cement, marble/ceramic</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="9">
            <text>Does the household own any televisions, tape players/CD players, or radios?</text>
            <nickname>ppi_timorleste_2007_owns_television</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>No</value>
            </choice>
            <choice order="2">
                <value>Yes</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="10">
            <text>How many clothes cupboards (lemari pakaian) does the household own?</text>
            <nickname>ppi_timorleste_2007_clothes_cupboards_owned</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>None</value>
            </choice>
            <choice order="2">
                <value>One</value>
            </choice>
            <choice order="3">
                <value>Two or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>
        <question order="11">
            <text>How many meters squared of land does the household cultivate (or has or controls, even if the land does not belong to the household) that is for annual crops or fallow, tree crops, pasture, plantation, grassland, or garden/garden plot?</text>
            <nickname>ppi_timorleste_2007_land_owned</nickname>
            <type>SINGLE_SELECT</type>
            <choice order="1">
                <value>1 to 1,499</value>
            </choice>
            <choice order="2">
                <value>1,500 to 2,999</value>
            </choice>
            <choice order="3">
                <value>3,000 to 9,999</value>
            </choice>
            <choice order="4">
                <value>None</value>
            </choice>
            <choice order="5">
                <value>10,000 or more</value>
            </choice>

            <mandatory>true</mandatory>
        </question>

    </section>
</QuestionGroup>
